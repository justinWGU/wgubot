<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <topic name="info">
        
        <!-- Capture user's strength -->
        <category>
            <pattern>MY STRENGTH IS *</pattern>
            <template>
                <think>
                    <set name="strength"><star></star></set>
                </think>
                <condition name="strength">
                    <li value="Analytical skills">Thanks! Now that I know your best strength is <get name="strength" />, do you prefer working with Business of IT or Cybersecurity?</li>
                    <li value="Programming">Thanks! Now that I know your best strength is <get name="strength" />, do you prefer developing Software or Databases?</li>
                    <li value="Networking">Thanks! Now that I know your best strength is <get name="strength" />, do you prefer working with Cybersecurity or Computer Hardware?</li>
                    <li>Please type "My strength is [Strength]." Ex: "My strength is Analytical skills"</li>
                </condition>
            </template>
        </category>
        
        <!-- Different types of answers for MY STRENGTH IS *-->
        <category>
        <pattern>ANALYTICAL SKILLS</pattern>
        <template>
            <think>
                <set name="strength">Analytical skills</set>
            </think>
            <srai>MY STRENGTH IS ANALYTICAL SKILLS</srai>
        </template>
    </category>

    <category>
        <pattern>PROGRAMMING</pattern>
        <template>
            <think>
                <set name="strength">Programming</set>
            </think>
            <srai>MY STRENGTH IS PROGRAMMING</srai>
        </template>
    </category>
    
    <category>
        <pattern>NETWORKING</pattern>
        <template>
            <think>
                <set name="strength">Networking</set>
            </think>
            <srai>MY STRENGTH IS NETWORKING</srai>
        </template>
    </category>

        <!-- Capture user's preference -->
